// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email        String  @unique
  password     String
  refreshToken String?

  forms Form[]

  @@map("users")
}

model Form {

  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type     String
  validity DateTime

  questions Question[]
  reward    Reward?    @relation(fields: [rewardId], references: [id])

  rewardId Int?  @unique
  User     User? @relation(fields: [userId], references: [id])
  userId   Int?
  @@map("forms")
}

model Question {

  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  question String
  type     String
  content  Json

  Form   Form? @relation(fields: [formId], references: [id])
  formId Int?
  @@map("questions")
}

model Reward {

  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name    String
  type    String
  content String

  validity DateTime

  style Json

  Form Form?
  @@map("rewards")
}
